<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="LayoutScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="Layout.MarginsLeftRightBottom">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>
    
    <style name="Layout.MarginsLeftRightBottom.MarginTop">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>
    
    <style name="LayoutListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="LayoutListItem.Margins">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>
    
    
    <style name="TextViewLabel" >
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Input">
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="Input.EditText">
        <item name="android:ems">10</item>
    </style>
    
    <style name="Input.TextArea">
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:minLines">3</item>
    </style>
    
    <style name="ImageViewDetails">
        <item name="android:layout_width">@dimen/image_view_size_details</item>
        <item name="android:layout_height">@dimen/image_view_size_details</item>
    </style>
    
    <style name="ImageViewList">
        <item name="android:layout_width">@dimen/image_view_size_list</item>
        <item name="android:layout_height">@dimen/image_view_size_list</item>
    </style>
    
    <style name="ImageViewInput">
        <item name="android:layout_width">@dimen/image_view_size_input</item>
        <item name="android:layout_height">@dimen/image_view_size_input</item>
    </style>
    
    <style name="ImageViewInput.NewInput">
        <item name="android:src">@drawable/ic_action_picture</item>
    </style>
    
    <style name="ListItemDivider">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">@dimen/list_item_divider</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>
    
    <style name="ListItemDivider.First">
        <item name="android:paddingTop">@dimen/list_item_divider</item>
    </style>
    
    <style name="DetailsItemDivider">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">@dimen/details_item_divider</item>
    </style>
    
    <style name="DetailsItemDivider.First">
        <item name="android:paddingTop">@dimen/details_item_divider</item>
    </style>
    
</resources>
